    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lynkor.hangry.AddActivity">

    //Recipe Image
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3"/>
    //Recipe Title
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>
    //Ingredients List
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2">

        </ListView>
    //Add Ingredient: Button that opens popover? end with toast "Ingredient added!"


</LinearLayout>
